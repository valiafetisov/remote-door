@import 'nib'
global-reset()

//
// global styles
//
*
  outline none
  box-sizing border-box

body, html
  height 100%
  padding 0
  margin 0
  overflow hidden

#react-root
  height 100%

//
// media
//
mobile = "all and (max-width 768px)"
notmobile = "all and (min-width 768px)"

//
// imports
//
@import '../imports/layouts/*'
@import '../imports/components/*'
